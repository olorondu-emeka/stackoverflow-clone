{
  "name": "stackoverflow-clone",
  "version": "1.0.0",
  "description": "stack overflow REST API clone",
  "main": "index.ts",
  "scripts": {
    "start": "npm run start:prod",
    "start:dev": "nodemon",
    "start:prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "build": "npm run clean && tsc",
    "clean": "rm -rf ./dist",
    "test": "jest --coverage",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "db:seed": "sequelize db:seed:all",
    "db:migrate-undo": "sequelize db:migrate:undo:all",
    "db:migrate": "sequelize db:migrate",
    "db:rollback": "npm run db:migrate-undo && npm run db:migrate && npm run db:seed",
    "syncenv": "node envcheck.js",
    "pre-commit": "npm run syncenv && git add . && npx --no-install lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olorondu-emeka/stackoverflow-clone.git"
  },
  "author": "Olorondu Chukwuemeka",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/olorondu-emeka/stackoverflow-clone/issues"
  },
  "homepage": "https://github.com/olorondu-emeka/stackoverflow-clone#readme",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.2.5",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "slugify": "^1.5.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-validator": "^3.0.0",
    "@types/faker": "^5.5.1",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "faker": "^5.5.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.+(ts)": [
      "eslint --fix --ext .ts ./src",
      "git add ."
    ],
    "*.+(json|md)": [
      "prettier --write",
      "git add ."
    ],
    "*.ts": "eslint --cache --fix"
  }
}
