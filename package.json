{
	"name": "stackoverflow-clone",
	"version": "1.0.0",
	"description": "stack overflow REST API clone",
	"main": "index.ts",
	"scripts": {
		"start": " npm run build && npm run start:prod",
		"start:dev": "nodemon",
		"start:prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
		"build": "npm run lint && npm run clean && tsc",
		"clean": "rimraf dist",
		"test": "jest",
		"coverage": "jest --coverage",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"syncenv": "node envcheck.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/olorondu-emeka/stackoverflow-clone.git"
	},
	"author": "Olorondu Chukwuemeka",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/olorondu-emeka/stackoverflow-clone/issues"
	},
	"homepage": "https://github.com/olorondu-emeka/stackoverflow-clone#readme",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"mysql2": "^2.2.5",
		"sequelize": "^6.6.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.22",
		"@types/node": "^14.14.37",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"eslint": "^7.23.0",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"nodemon": "^2.0.7",
		"ts-jest": "^26.5.4",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run syncenv && git add . && lint-staged"
		}
	},
	"lint-staged": {
		"*.+(ts|js)": [
			"eslint --fix --ext .ts ./src",
			"git add"
		],
		"*.+(json|md)": [
			"prettier --write",
			"git add"
		]
	}
}
